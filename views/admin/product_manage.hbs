
    <nav class="navbar navbar-light bg-light justify-content-between">

        <a class="navbar-brand">Product Management</a>
        <a href="/admin/add_product" class=" btn btn-primary">Add Products</a>

    </nav>
    

    <div class="row mt-3">
        <div class="col-md-10 mx-auto border ">
            <table class="table " id="usertable">
                <thead>
                    <tr>
                        <th scope="col">sl.No</th>
                        <th scope="col">Product Name</th>
                        <th scope="col">Brand</th>
                        <th scope="col">Price</th>
                        <th scope="col">Discount Price</th>
                        <th scope="col">Catergory name</th>
                        <th scope="col">Image</th>
                        <th scope="col">Stock</th>
                        <th scope="col">Action</th>


                    </tr>
                </thead>
                <tbody>

                    {{#each productdetails.data}}

                    <tr>
                        <th scope="row">{{inc @index}}</th>
                        <td>{{this.productname}}</td>
                        <td>{{this.brand}}</td>
                        <td>₹{{this.price}}</td>
                        <td>₹{{this.discountprice}}</td>
                        <td>{{categoryname.categoryname}}</td>

                        <td>
                            <img src="/productimages/{{this.image.[0]}}" alt="" width="50em">
                        </td>
                        <td>{{this.stock}}</td>
                        <td>
                            <a class="btn btn-outline-success mb-1" href="/admin/update-product/{{this._id}}">Edit</a>

                            <a class="btn btn-outline-danger " href="/admin/delete-product/{{this._id}}"
                                onclick="return confirm('Are you sure you want to Delete {{this.productname}} ?')">Delete</a>
                        </td>
                        {{/each}}

                    </tr>


                </tbody>
            </table>
        </div>
