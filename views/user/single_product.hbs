                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-secondary"></i>
                            <span class="list-inline-item text-dark">Rating 4.8 | 36 Comments</span>
                        </p>
                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <h6>Brand:</h6>
                            </li>
                            <li class="list-inline-item">
                                <p class="text-muted"><strong>{{productData.data.brand}}</strong></p>
                            </li>
                        </ul>

                        <h6>Description:</h6>
                        <p>{{productData.data.description}}</p>



                        <form action="" method="GET">
                            <input type="hidden" name="single_product" value="single_product">
                            <div class="row">
                                <div class="col-auto">
                                    <ul class="list-inline pb-3 btn-group">
                                        <li class="list-inline-item">Size :
                                            <input type="hidden" name="product-size" id="product-size" value="S">
                                        </li>
                                        <li class="list-inline-item"><span
                                                class="btn btn-outline-secondary rounded-circle btn-default px-3">S</span>
                                        </li>
                                        <li class="list-inline-item"><span
                                                class="btn btn-outline-secondary rounded-circle btn-default px-3">M</span>
                                        </li>
                                        <li class="list-inline-item"><span
                                                class="btn btn-outline-secondary rounded-circle btn-default px-3">L</span>
                                        </li>
                                        <li class="list-inline-item"><span
                                                class="btn btn-outline-secondary rounded-circle btn-default px-3">XL</span>
                                        </li>
                                    </ul>
                                </div>
                                
                            </div>
                            <div class="row pb-3">
                                <div class="col d-grid">
                                    <button type="submit" class="btn btn-primary btn-lg" name="submit" value="buy"
                                        onclick="wishlist('{{productData.data._id}}')">Add to Wishlist</button>
                                </div>
                                <div class="col d-grid">
                                    <button type="submit" class="btn btn-success btn-lg" name="submit"
                                        value="addtocard" onclick="addtocart('{{productData.data._id}}')">Add To Cart</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>





